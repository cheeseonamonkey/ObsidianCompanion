    </PreferenceCategory>






    <PreferenceCategory android:title="Misc">

        <SwitchPreference
            android:defaultValue="true"
            android:key="prefAmericanDate"
            android:title="Use American date format"
            android:summary="Use month-first date format\n - ON for month-first (12-20-2022) \n - OFF for day-first (20-12-2022)"
            android:enabled="false"

            />

        <SwitchPreference
            android:defaultValue="true"
            android:key="pref12hrTime"
            android:title="Use am/pm time format"
            android:summary="Use 12-hour time format \n - ON for am/pm (10:30 pm)\n - OFF for 24-hour (20:30)"
            android:enabled="false"
/>

    </PreferenceCategory>

