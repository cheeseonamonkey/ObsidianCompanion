    <PreferenceCategory android:title="QuickAdd">



        <Preference
            android:key="prefRequestPermissions"
            android:title="Request permissions"
            android:summary="Permissions required for QuickAdd"/>


        <Preference
            android:key="prefSetDiscreetFile"
            android:title="Set appending file"
            android:summary="Select file in vault to QuickAdd to"/>



        <EditTextPreference
            android:key="prefQaPrepend"
            android:title="Prepend"
            android:summary="Added before the data"
            android:defaultValue="\\n[!date] [!time]\\n\\n"
            android:dialogMessage="Markdown text prepended immediately before the sent data.  Use \\n for a new line. \n\nDefault: \\n[!date] [!time] \\n\\n   \n\nVariables:\n - [!empty]\n - [!date]\n - [!time]"/>


        <EditTextPreference
            android:key="prefQaAppend"
            android:title="Append"
            android:summary="Added after the data"
            android:defaultValue="\\n\\n\\n---"
            android:dialogMessage="Markdown text appended immediately after the sent data.\n\nUse \\n for a new line.  \n\nDefault: \\n\\n\\n---  \n\nVariables:\n - [!empty]\n - [!date]\n - [!time]"/>


